FROM openjdk:17-oracle

EXPOSE 8762

ADD /target/clicknship-cart-service-0.0.1-SNAPSHOT.jar cart-service.jar

RUN groupadd --system clicknship && useradd --system clicknship -g clicknship
RUN chown -R clicknship /cart-service.jar
RUN chown -R clicknship /var/log

USER clicknship

ENTRYPOINT ["java", "-jar","/cart-service.jar"]